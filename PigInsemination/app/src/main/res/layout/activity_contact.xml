    <ImageView
        android:id="@+id/contact_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left" />

    <ImageView
        android:id="@+id/menu_contact_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vertical" />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_back_button"
        app:layout_constraintVertical_bias="0.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32sp"
            android:orientation="vertical">

    <TextView
        android:id="@+id/contact_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:paddingTop="18sp"
        android:text="Contact"

        android:textAlignment="center"
        android:textSize="20sp" />

            <TextView
                android:id="@+id/contact_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32sp"
                android:layout_marginTop="24sp"
                android:layout_marginRight="24sp"
                android:scrollbars="vertical"

                android:text="@string/contact_us"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/nunito_bold"
                android:paddingTop="18sp"
                android:text="Developers"

                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/developer_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32sp"
                android:layout_marginTop="24sp"
                android:layout_marginRight="24sp"
                android:scrollbars="vertical"

                android:text="@string/developer_string"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>